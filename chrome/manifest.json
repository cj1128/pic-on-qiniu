{
  "manifest_version": 2,
  "name": "图床on七牛",
  "description": "基于七牛的图床，支持拖拽上传，复制上传，批量上传以及浏览历史记录",
  "version": "1.3",
  "icons": {
    "16": "icon16.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
   "default_title": "图床on七牛"
  },
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/"
   ]
}
