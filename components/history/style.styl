@require "colors"

.history__header
  margin: 30px 0
  display: flex
  position: relative
  img
    cursor: pointer
    width: 20px
    height: 20px

.history__header__layout
  align-items: center
  margin: auto
  > img:first-child
    margin-right: 20px

.history__header__btn
  position: absolute
  right: 0
  align-items: center
  > img
    margin-right: 20px
    &:last-child
      margin-right: 0

.history__tip
  padding: 50px 0
  text-align: center
  color: $gray

.history__grid-items
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  .history__item
    width: 48%
    flex-direction: column
    margin-bottom: 20px
  .history__img-container
    width: 100%
    height: 300px
  .history__item__results
    width: 100%

.history__list-items
  .history__item
    width: 100%
    margin-bottom: 30px
  .history__img-container
    width: 40%
  .history__item__results
    width: 55%
    margin-left: auto

.history__item
  box-sizing: border-box
  display: flex
  align-items: center

.history__img-container
  display: flex
  align-items: center
  justify-content: space-around
  > img
    max-width: 100%
    max-height: 100%

.history__item__results
  width: 100%
  padding: 0
  > li
    display: flex
    padding: 10px 0
    align-items: center
    > span:first-child
      margin-right: 20px
    > span:nth-child(2)
      overflow: hidden
      text-overflow: ellipsis
      width: 80%
    > img:last-child
      width: 20px
      margin-left: auto
      cursor: pointer

.history__loading
  padding: 20px 0
  text-align: center
  color: $gray

.history__items
  margin-top: 50px
  display: flex
  justify-content: space-between

.history__grid
  width: 32%

.history__grid__item
  position: relative
  margin-bottom: 20px
  > img
    border-radius: 5px
    width: 100%
.history__grid__item-info
  display: flex
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  opacity: 0
  > p
    align-self: flex-end
    margin-left: auto
    margin-right: 20px
    color: white
  &:hover
    cursor: copy
    opacity: 1
    background-image: linear-gradient(180deg,rgba(0,0,0,.25) 0,transparent 40%,transparent 60%,rgba(0,0,0,.3));
